// before the event loop do
 
 fragmentation_JEC *FF_JEC=new fragmentation_JEC(RADIUS, PFptcut);
 FF_JEC->set_correction();
 
// In the event loop for each jet count the number of PF candidates

    int ntrk=0;
    for(int ipf=0;ipf<fpf->nPFpart;ipf++){
     if(doPP){
      if(FF_JEC->passes_PF_selection(fpf->pfPt[ipf], fpf->pfEta[ipf], fpf->pfPhi[ipf], fpf->pfId[ipf], fjet->jteta[ijet], fjet->jtphi[ijet])) ntrk++;
      }else{
      if(FF_JEC->passes_PF_selection(fpf->pfVsPt[ipf], fpf->pfEta[ipf], fpf->pfPhi[ipf], fpf->pfId[ipf], fjet->jteta[ijet], fjet->jtphi[ijet])) ntrk++;
     }
    }

//Then get the corrected pt for each jet before dijet selection by doing

    double corrected_pt=FF_JEC->get_corrected_pt(fjet->jtpt[ijet],ntrk);
